{
    "parser": "@typescript-eslint/parser",
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "airbnb"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-unused-vars": "off",
        "max-classes-per-file": "off",
        "no-shadow": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@config", "./config"],
                    ["@graphql", "./src/graphql"],
                    ["@repositories", "./src/repositories"],
                    ["@util", "./src/util"]
                ],
                "extensions": [".ts", ".js", ".jsx", ".json"]
            }
        }
    }
}
