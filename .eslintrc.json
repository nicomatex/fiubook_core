{
    "parser": "@typescript-eslint/parser",
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "airbnb"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
        "indent": ["error", 4]
    },
    "alias": {
        "@config/*": ["config/*"],
        "@graphql/*": ["src/graphql/*"],
        "@repositories/*": ["src/repositories/*"],
        "@util/*": ["src/util/*"]
    }
}
